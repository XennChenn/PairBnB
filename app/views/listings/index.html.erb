<% if signed_in? %>
		Signed in as: <%= current_user.email %>
		<%= button_to 'Sign out', sign_out_path, method: :delete %>
	<% else %>
		<%= link_to 'Sign in', sign_in_path %><br>
	<% end %>

<%= link_to 'Create Listing', new_listing_path %>




<table>
	<tr>
		<th>Title</th>
		<th>Bedroom</th>
		<th>Bathroom</th>
		<th>Checkin</th>
		<th>Checkout</th>
		<th>Number of Guest</th>
		<th>Description</th>
		<th>Rule</th>
		<th>Price</th>
		<th>Property Type</th>
		<th>Cancellation</th>
	</tr>
	
	<% @listing.each do |x| %>
		<tr>
			<td><a href="/listings/<%= x.id %>"><%= x.title %></a></td>
			<td><%= x.bedroom %></td>
			<td><%= x.bathroom %></td>
			<td><%= x.checkin %></td>
			<td><%= x.checkout %></td>
			<td><%= x.number_of_guest %></td>
			<td><%= x.description %></td>
			<td><%= x.rule %></td>
			<td><%= x.price %></td>
			<% x.tags.each do |tag| %>
				<td><%= tag.property_type %></td>
				<td><%= tag.cancellation %></td>
			<% end %>
		</tr>
	<% end %>
</table>