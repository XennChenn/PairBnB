
<table>
	<tr>
		<th>Title</th>
		<th>Bedroom</th>
		<th>Bathroom</th>
		<th>Checkin</th>
		<th>Checkout</th>
		<th>Number of Guest</th>
		<th>Description</th>
		<th>Rule</th>
		<th>Price</th>
		<th colspan="3"></th>
	</tr>

	
		<tr>
			<td><%= @listing.title %></td>
			<td><%= @listing.bedroom %></td>
			<td><%= @listing.bathroom %></td>
			<td><%= @listing.checkin %></td>
			<td><%= @listing.checkout %></td>
			<td><%= @listing.number_of_guest %></td>
			<td><%= @listing.description %></td>
			<td><%= @listing.rule %></td>
			<td><%= @listing.price %></td>
			<% if @user == current_user.id %>
				<td><%= link_to 'Edit', edit_listing_path %></td>
				<td><%= link_to 'Delete', listing_path, method: :delete, data: { confirm: 'Are you sure?'} %></td>
			<% end %>
		</tr>
</table>